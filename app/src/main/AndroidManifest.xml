<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.lifelaboratory.finopolis">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SignInActivity"
                android:label="Добро пожаловать"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="Мой профиль"
                android:windowSoftInputMode="stateHidden"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ItemsActivity"
                android:label="Мои товары"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".PostsActivity"
                android:label="Мои посты"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".OnePostActivity"
                android:label="Редактирование"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".OneItemActivity"
                android:label="Редактирование"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SocialActivity"
                android:label="Мои посты"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SignUpActivity"
                android:label="Регистрация"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name="com.vk.sdk.VKServiceActivity"
                android:label="ServiceActivity"
                android:theme="@style/VK.Transparent" />
    </application>

</manifest>