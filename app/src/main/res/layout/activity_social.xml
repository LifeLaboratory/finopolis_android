<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SignInActivity"
        android:background="@color/colorPrimary">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff8c00"
            android:textAlignment="center"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статистика"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#fff" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="56dp"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vk_logo"/>

            <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:text="Вконтакте"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vk_logo"/>

            <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/vk_statistic"
                    android:src="@drawable/bar"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fb_logo"/>

            <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:text="Facebook"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vk_logo"/>

            <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/bar"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_alignParentBottom="true">

        <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/list"
                android:text="Посты"
                android:textSize="14sp"
                android:id="@+id/btn_to_posts"
                android:background="@drawable/fon_menu"
                android:textColor="#fff" />

        <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Товары"
                android:src="@drawable/box"
                android:textSize="14sp"
                android:id="@+id/btn_to_items"
                android:background="@drawable/fon_menu"
                android:textColor="#fff" />

        <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Статистика"
                android:src="@drawable/social"
                android:textSize="14sp"
                android:id="@+id/btn_to_social"
                android:background="@drawable/fon_menu"
                android:textColor="#fff" />

        <ImageButton
                android:src="@drawable/profile"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Профиль"
                android:textSize="14sp"
                android:background="@drawable/fon_menu"
                android:textColor="#fff"
                android:id="@+id/btn_to_profile" />

    </LinearLayout>

</RelativeLayout>